<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".DangKyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dangky"
        android:layout_above="@+id/lbKhungDangKy"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/size_10dp"
        android:layout_margin="@dimen/size_10dp"
        android:textStyle="bold"
        android:textSize="@dimen/size_30dp"
        android:textColor="@color/white">

    </TextView>

    <LinearLayout
        android:id="@+id/lbKhungDangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_tendangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="@dimen/size_10dp"
            android:hint="@string/ten_dang_nhap"
            android:padding="@dimen/size_10dp"
            android:singleLine="true"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/size_10dp"
            android:hint="@string/matkhau"
            android:padding="@dimen/size_10dp"
            android:password="true"
            android:singleLine="true"
            android:textSize="20dp"></EditText>

        <RadioGroup
            android:id="@+id/radiogroupd_gioitinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobutton_nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:checked="true"></RadioButton>

            <RadioButton
                android:layout_marginLeft="@dimen/size_10dp"
                android:id="@+id/radiobutton_nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ná»¯"></RadioButton>
        </RadioGroup>

        <EditText
            android:id="@+id/edit_ngaysinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:background="@color/white"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="@dimen/size_10dp"
            android:hint="@string/ngaysinh"
            android:padding="@dimen/size_10dp"
            android:singleLine="true"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/edit_hoten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/idcard"
            android:drawablePadding="@dimen/size_10dp"
            android:hint="@string/hoten"

            android:padding="@dimen/size_10dp"
            android:singleLine="true"
            android:maxLength="8"
            android:textSize="20dp"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_dongy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/green"
                android:padding="@dimen/size_10dp"
                android:text="@string/dongy"></Button>

            <Button
                android:id="@+id/button_thoat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorOrange"
                android:padding="@dimen/size_10dp"
                android:text="@string/thoat">
            </Button>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>